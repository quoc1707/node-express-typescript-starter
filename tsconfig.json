{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "rootDir": "src",
        "outDir": "build",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src"]
}
